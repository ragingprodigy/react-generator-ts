{
	"name": "react-generator-ts",
	"displayName": "react-generator-ts",
	"description": "VS Code extension for generating React components in typescript",
	"version": "1.0.0",
	"publisher": "Omonayajo",
	"bugs": {
		"url": "https://github.com/ragingprodigy/react-generator-ts/issues",
		"email": "omonayajo@live.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ragingprodigy/react-generator-ts"
	},
	"engines": {
		"vscode": "^1.45.0"
	},
	"icon": "assets/logo.png",
	"categories": [
		"Snippets",
		"Programming Languages"
	],
	"keywords": [
		"typescript",
		"react",
		"typescript-react",
		"snippets",
		"code-generator"
	],
	"activationEvents": [
		"onCommand:rgt.generateComponent",
		"onCommand:rgt.generateStyledComponent",
		"onCommand:rgt.generateStyledComponentCSS"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "rgt.generateComponent",
				"title": "RGT: Generate Component"
			},
			{
				"command": "rgt.generateStyledComponent",
				"title": "RGT: Generate Styled Component (SCSS)"
			},
			{
				"command": "rgt.generateStyledComponentCSS",
				"title": "RGT: Generate Styled Component (CSS)"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "rgt.generateComponent",
					"group": "reactGeneratorGroup@1",
					"when": "explorerResourceIsFolder"
				},
				{
					"command": "rgt.generateStyledComponent",
					"group": "reactGeneratorGroup@2",
					"when": "explorerResourceIsFolder"
				},
				{
					"command": "rgt.generateStyledComponentCSS",
					"group": "reactGeneratorGroup@3",
					"when": "explorerResourceIsFolder"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/change-case": "^2.3.1",
		"@types/glob": "^7.1.1",
		"@types/lodash": "^4.14.152",
		"@types/mkdirp": "^1.0.0",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.45.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"lodash": "^4.17.15",
		"mkdirp": "^1.0.4"
	}
}
